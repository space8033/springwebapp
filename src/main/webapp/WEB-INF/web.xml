<?xml version="1.0" encoding="UTF-8"?>
<web-app 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
		xsi:schemaLocation="
			http://xmlns.jcp.org/xml/ns/javaee 
			http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
			version="4.0">
			
  <display-name>springwebapp</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- =============================================================================== -->
  <!-- ServletContext 설정 -->
  <listener>
  	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
  	<param-name>contextConfigLocation</param-name>
  	<param-value>classpath:spring/root/*.xml</param-value>
  </context-param>
  <!-- =============================================================================== -->
  
  <!-- =============================================================================== -->
  <!-- DispatcherServlet 설정 -->
  <servlet>
  	<servlet-name>DispatcherServlet</servlet-name>
  	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  	<!-- Spring 설정 파일 제공 -->
  	<init-param>
	  	 <param-name>contextConfigLocation</param-name>
	  	 <param-value>classpath:spring/dispatcher/*.xml</param-value>
  	</init-param>
  	
  	<!-- 웹 애플리케이션이 시작할 때 서블릿 객체 생성 (최초 응답시 속도를 올리기 위함)-->
  	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>DispatcherServlet</servlet-name>
  	<!-- 모든 요청을 DispatcherServlet이 처리하도록 설정 -->
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  <!-- =============================================================================== -->
  
  <!-- =============================================================================== -->
  <!-- Post 한글 데이터를 복원하기 위한  필터 설정 -->
    <filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<!-- 모든 요청시 필터에서 전처리하고 DispatcherServlet 실행 -->
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  <!-- =============================================================================== -->
	
	<filter>
		<filter-name>Ch02FilterA</filter-name>
		<filter-class>com.mycompany.springwebapp.filter.Ch02FilterA</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Ch02FilterA</filter-name>
		<url-pattern>/ch02/*</url-pattern>
	</filter-mapping>
  
  <!-- =============================================================================== -->
  
  
</web-app>